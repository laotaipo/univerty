/* components/tab/tab.wxss */
.banner {
  width: 100%;
  height: 50px;
  background-color: #ffffff;
  position: fixed;
  z-index: 15;  
  bottom: 0;
  left: 0;
  right: 0;
  border-top: 1px solid #eeeeee;
}
.banner .tab {
  height: 50px;
  width: 30px; 
  background-color: e23d0e;
  position: absolute; 
  top: 0;  
  z-index: 15;  
}
.banner .tab1 {
  left: 0;
} 
.banner .tab2 {
  left: 22%;
} 
.banner .tab3 {
  left:45%;
} 
/* .banner .tab4 {
  left: 90%
}  */
 .banner .tab5 {
  left: 70%;
}  
.banner .tab6 {
  right: 0;
} 
.banner .info {
  font-size: 12px;
  position: absolute;
  top: 30px;
}
.banner .img {
  width: 24px;
  height: 24px;
  position: absolute;
  top: 5px;
}
.more-tab {
  font-size: 14px;
  color: #ffffff;
  width: 30%;
  height: 200px;
  position: absolute;
  top: -110px;
  right: -30%;
  text-align: center;
  transition: right .5s;
}
.sub-tab {
  padding: 3px 0;
  background: rgba(0, 0, 0, .5)
}
.show-tab {
  position: absolute;
  right: 0;
  transition: right .5s;
}