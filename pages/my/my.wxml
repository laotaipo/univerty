<!--pages/my/my.wxml-->
<view class='my-container'>
  <view class='person-info'>
    <image bindtap="bindViewTap" class="my-head-sculpturer" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
    <view class='user-name'>{{userInfo.nickName}}</view>
    <text class='school'>东北林业大学</text>
    <picker bindchange='bindPickerTime' mode='time' start="00:11" end="23:11" value='{{time}}'>
      <text class='set-btn'>校园管理</text>
    </picker>
  </view>
  <view class='container'>
    <view class='my-choice fabu'>
      <text>我发布的</text>
      <text class='num'>8条</text>
    </view>
    <view class='my-choice cang'>
      <text>我收藏的</text>
      <text class='num'>8条</text>
    </view>
    <view class='my-choice weidu'>
      <text>我未读的</text>       
      <text class='num'>8条</text>
    </view>
    <view class='my-choice ping'>
      <text>漂流瓶</text>    
      <text class='num'>8个</text>
    </view>
  </view>
  <view class='yaofa-container'>
    <view class="yaofa {{isShowPubTag ? 'yaofa-hou' : ''}}" bindtap="showPubTag">
    +
    </view>
    <view class="kind {{isShowPubTag ? 'kind1' : 'kind-all'}}">漂流瓶</view>
    <view class="kind {{isShowPubTag ? 'kind2' : 'kind-all'}}">树洞</view>
    <view class="kind {{isShowPubTag ? 'kind3' : 'kind-all'}}">买卖</view>
    <view class="kind {{isShowPubTag ? 'kind4' : 'kind-all'}}">失物招领</view>
    <view class="kind {{isShowPubTag ? 'kind5' : 'kind-all'}}">其他</view>
  </view>
</view>
