.detail-container {
  padding: 10px 5px 0 5px;
  position: relative;
  top: 0;
  left: 0;
}
.detail-container .head {
  border-bottom: 1px solid #eeeeee;
}
.detail-container .sculpture {
  width: 70px;
  height: 70px;
  border-radius: 70%;
}
.detail-container .name {
  position: absolute;
  top: 15px; 
  left: 90px;
}
.detail-container .time {
  position: absolute;
  top: 45px;
  left: 90px;
}
.detail-container .tag {
  position: absolute;
  top: 25px;
  right: 10px;
}
.detail-container .hudong {
  font-size: 14px;
  position: absolute;
  top: 85px;
  right: 10px;
}
.detail-container .hudong .good {
  width: 30px;
  position: absolute;
  right: 0;
}
.detail-container .hudong .ping {
  width: 30px;
  position: absolute;
  right: 50px;
}
.detail-container .hudong .cang {
  width: 30px;
  position: absolute;
  right: 100px;
}
